{
  "name": "vue-webpack",
  "version": "1.0.0",
  "description": "demo",
  "private": true,
  "author": "oumq",
  "license": "MIT",
  "scripts": {
    "build": "webpack --config scripts/webpack.base.config.js",
    "lint": "eslint src/**/*.js",
    "fix": "prettier --write src/**/*.js",
    "commit": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "babel-eslint": "^10.1.0",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{css,scss,less,json,md,js,ts,tsx,vue}": [
      "prettier --write",
      "git add"
    ]
  }
}
